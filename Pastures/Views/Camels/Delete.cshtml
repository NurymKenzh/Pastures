    <h4>Верблюд</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Breed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Breed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Weight)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SlaughterYield)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SlaughterYield)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EwesYield)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EwesYield)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalGoals)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalGoals)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MilkFatContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MilkFatContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Range)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Range)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            @{
                var base64 = "";
                var imgSrc = "";
                if (Model.Photo != null)
                {
                    base64 = Convert.ToBase64String(Model.Photo);
                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }
            }
            <img src="@imgSrc" style="max-width: 500px;" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Обратно к списку", "Index")
        </div>
    }
</div>
